<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Expense - Spent Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h1 class="app-title">Spent</h1>
                <button class="theme-toggle" id="themeToggle" title="Toggle theme">
                    <span class="theme-icon">ðŸŒ™</span>
                </button>
            </div>

            <div class="nav-menu">
                <a href="/dashboard" class="nav-item">
                    <span class="nav-icon">ðŸ“Š</span>
                    <span>Dashboard</span>
                </a>
                <a href="/all-expenses" class="nav-item">
                    <span class="nav-icon">ðŸ’°</span>
                    <span>All Expenses</span>
                </a>
                <a href="/expenses/add" class="nav-item active">
                    <span class="nav-icon">âž•</span>
                    <span>Add Expense</span>
                </a>
                <a href="/report" class="nav-item">
                    <span class="nav-icon">ðŸ“ˆ</span>
                    <span>Reports</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar"><%= username.charAt(0).toUpperCase() %></div>
                    <span class="user-name"><%= username %></span>
                </div>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="page-header">
                <div class="header-content">
                    <h2>Add Expense</h2>
                    <p class="header-subtitle">Create a new expense entry</p>
                </div>
            </header>

            <div class="form-container">
                <div class="form-card">
                    <form method="POST">
                        <!-- Category -->
                        <div class="form-group">
                            <label class="form-label">Category</label>
                            <div style="display: flex; gap: var(--space-sm);">
                                <select name="category" class="form-select" required style="flex: 1;">
                                    <option value="">Select a category...</option>
                                    <% categories.forEach(cat => { %>
                                        <option value="<%= cat.name %>"><%= cat.name %></option>
                                    <% }); %>
                                </select>
                                <a href="/expenses/add-category" class="btn btn-small" style="background-color: var(--accent); color: white; padding: var(--space-md);">New</a>
                            </div>
                        </div>

                        <!-- Subcategory -->
                        <div class="form-group">
                            <label class="form-label">Subcategory (Optional)</label>
                            <input type="text" name="subcategory" class="form-input" placeholder="e.g., Groceries, Electronics">
                        </div>

                        <!-- Note -->
                        <div class="form-group">
                            <label class="form-label">Note (Optional)</label>
                            <input type="text" name="note" class="form-input" placeholder="e.g., Weekly shopping">
                        </div>

                        <!-- Date & Time -->
                        <div class="form-group inline">
                            <div>
                                <label class="form-label">Date</label>
                                <input type="date" name="date" class="form-input" id="dateInput" required>
                            </div>
                            <div>
                                <label class="form-label">Time (Optional)</label>
                                <input type="time" name="time" class="form-input" id="timeInput">
                            </div>
                        </div>

                        <!-- Amount & Color -->
                        <div class="form-group inline">
                            <div>
                                <label class="form-label">Amount (â‚¬)</label>
                                <input type="number" name="amount" class="form-input" step="0.01" placeholder="0.00" required>
                            </div>
                            <div>
                                <label class="form-label">Color</label>
                                <input type="color" name="color" class="form-input" value="#00A9FF" style="height: 44px; cursor: pointer;">
                            </div>
                        </div>

                        <!-- Buttons -->
                        <button type="submit" class="btn btn-primary">Add Expense</button>
                        <a href="/dashboard" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </main>
    </div>

    <script src="/js/theme.js"></script>
    <script>
        // Auto-fill date and time
        const dateInput = document.getElementById('dateInput');
        const timeInput = document.getElementById('timeInput');

        const now = new Date();
        const date = now.toISOString().split('T')[0];
        const time = now.toTimeString().slice(0, 5);

        dateInput.value = date;
        timeInput.value = time;
    </script>
</body>
</html>
