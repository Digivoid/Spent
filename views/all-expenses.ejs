<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Expenses - Spent Tracker</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h1 class="app-title">Spent</h1>
                <button class="theme-toggle" id="themeToggle" title="Toggle theme">
                    <span class="theme-icon">ðŸŒ™</span>
                </button>
            </div>

            <div class="nav-menu">
                <a href="/dashboard" class="nav-item">
                    <span class="nav-icon">ðŸ“Š</span>
                    <span>Dashboard</span>
                </a>
                <a href="/all-expenses" class="nav-item active">
                    <span class="nav-icon">ðŸ’°</span>
                    <span>All Expenses</span>
                </a>
                <a href="/expenses/add" class="nav-item">
                    <span class="nav-icon">âž•</span>
                    <span>Add Expense</span>
                </a>
                <a href="/report" class="nav-item">
                    <span class="nav-icon">ðŸ“ˆ</span>
                    <span>Reports</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar"><%= username.charAt(0).toUpperCase() %></div>
                    <span class="user-name"><%= username %></span>
                </div>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="page-header">
                <div class="header-content">
                    <h2>All Expenses</h2>
                    <p class="header-subtitle">View and manage all your expenses</p>
                </div>
            </header>

            <!-- Expenses Table -->
            <section style="padding: var(--space-2xl); flex: 1; overflow-y: auto;">
                <div class="card">
                    <div class="card-header">
                        <h3>Expenses List</h3>
                        <a href="/expenses/add" class="btn btn-primary btn-small">Add New</a>
                    </div>
                    <div class="card-body">
                        <% if (expenses && expenses.length > 0) { %>
                            <div class="table-container">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Date</th>
                                            <th>Time</th>
                                            <th>Amount</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% expenses.forEach(exp => { %>
                                            <tr>
                                                <td>
                                                    <div style="display: flex; align-items: center; gap: 8px;">
                                                        <div style="width: 12px; height: 12px; border-radius: 50%; background-color: <%= exp.color %>; flex-shrink: 0;"></div>
                                                        <a href="/expenses/category/<%= encodeURIComponent(exp.category) %>" style="color: var(--accent); text-decoration: none; font-weight: 500; cursor: pointer;">
                                                            <%= exp.category %>
                                                        </a>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (exp.subcategory) { %>
                                                        <div><%= exp.subcategory %></div>
                                                    <% } %>
                                                    <% if (exp.note) { %>
                                                        <div style="color: var(--text-secondary); font-size: 13px;"><%= exp.note %></div>
                                                    <% } %>
                                                </td>
                                                <td><%= new Date(exp.date).toLocaleDateString('de-DE') %></td>
                                                <td><%= exp.time || '-' %></td>
                                                <td class="amount-cell">â‚¬<%= exp.amount.toFixed(2) %></td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <a href="/expenses/edit/<%= exp.id %>" class="btn btn-small" style="background-color: var(--bg-primary); border: 1px solid var(--border); color: var(--accent); padding: 4px 8px;">Edit</a>
                                                        <button class="btn btn-small btn-danger" style="padding: 4px 8px;" onclick="deleteExpense(<%= exp.id %>)">Delete</button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <div class="empty-state">
                                <p>No expenses yet</p>
                                <a href="/expenses/add" class="btn btn-primary" style="margin-top: var(--space-lg); max-width: 200px;">Add First Expense</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="/js/theme.js"></script>
    <script>
        function deleteExpense(id) {
            if (confirm('Delete this expense?')) {
                fetch(`/expenses/${id}`, { method: 'DELETE' })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            location.reload();
                        } else {
                            alert('Error deleting expense');
                        }
                    });
            }
        }
    </script>
</body>
</html>
