<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spent Tracker - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h1 class="app-title">Spent</h1>
                <button class="theme-toggle" id="themeToggle" title="Toggle theme">
                    <span class="theme-icon">ðŸŒ™</span>
                </button>
            </div>

            <div class="nav-menu">
                <a href="/dashboard" class="nav-item active">
                    <span class="nav-icon">ðŸ“Š</span>
                    <span>Dashboard</span>
                </a>
                <a href="/all-expenses" class="nav-item">
                    <span class="nav-icon">ðŸ’°</span>
                    <span>All Expenses</span>
                </a>
                <a href="/expenses/add" class="nav-item">
                    <span class="nav-icon">âž•</span>
                    <span>Add Expense</span>
                </a>
                <a href="/report" class="nav-item">
                    <span class="nav-icon">ðŸ“ˆ</span>
                    <span>Reports</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar"><%= username.charAt(0).toUpperCase() %></div>
                    <span class="user-name"><%= username %></span>
                </div>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="page-header">
                <div class="header-content">
                    <h2>Dashboard</h2>
                    <p class="header-subtitle">Your spending overview</p>
                </div>
            </header>

            <!-- Stats Cards -->
            <section class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Total Spent</div>
                    <div class="stat-value">â‚¬<%= totalExpenses %></div>
                    <div class="stat-change positive">All time</div>
                </div>

                <div class="stat-card">
                    <div class="stat-label">Recent Expenses</div>
                    <div class="stat-value"><%= recentExpenses.length %></div>
                    <div class="stat-change">Last 5 entries</div>
                </div>

                <div class="stat-card">
                    <div class="stat-label">Categories</div>
                    <div class="stat-value"><%= data.length %></div>
                    <div class="stat-change">Active</div>
                </div>

                <div class="stat-card">
                    <div class="stat-label">Avg. Expense</div>
                    <div class="stat-value">â‚¬<%= (totalExpenses / (recentExpenses.length || 1)).toFixed(2) %></div>
                    <div class="stat-change">Per entry</div>
                </div>
            </section>

            <!-- Charts & Recent -->
            <section class="dashboard-grid">
                <!-- Pie Chart -->
                <div class="card chart-card">
                    <div class="card-header">
                        <h3>Spending by Category</h3>
                    </div>
                    <div class="card-body">
                        <canvas id="spendingChart"></canvas>
                    </div>
                </div>

                <!-- Recent Expenses -->
                <div class="card recent-card">
                    <div class="card-header">
                        <h3>Recent Expenses</h3>
                        <a href="/all-expenses" class="view-all-link">View All</a>
                    </div>
                    <div class="card-body">
                        <% if (recentExpenses.length > 0) { %>
                            <div class="expense-list">
                                <% recentExpenses.forEach(exp => { %>
                                    <div class="expense-item">
                                        <div class="expense-left">
                                            <div class="expense-category" style="background-color: <%= exp.color %>"></div>
                                            <div class="expense-details">
                                                <div class="expense-name"><%= exp.category %></div>
                                                <div class="expense-date"><%= new Date(exp.date).toLocaleDateString('de-DE') %></div>
                                            </div>
                                        </div>
                                        <div class="expense-amount">â‚¬<%= exp.amount.toFixed(2) %></div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="empty-state">
                                <p>No expenses yet</p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="/js/theme.js"></script>
    <script src="/js/charts.js"></script>
    <script>
        // Chart data
        const chartData = {
            labels: [<%= data.map(d => `"${d.category}${d.subcategory ? ' - ' + d.subcategory : ''}"`).join(',') %>],
            datasets: [{
                 [<%= data.map(d => d.total).join(',') %>],
                backgroundColor: [<%= data.map(d => `"${d.color}"`).join(',') %>],
                borderColor: 'rgba(255, 255, 255, 0.1)',
                borderWidth: 2
            }]
        };

        initChart('spendingChart', chartData);
    </script>
</body>
</html>
