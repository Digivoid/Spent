<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Spent Tracker - Dashboard</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="app-container">
        <!-- Sidebar Navigation -->
        <nav class="sidebar">
            <div class="sidebar-header">
                <h1 class="app-title">Spent</h1>
                <button class="theme-toggle" id="themeToggle" title="Toggle theme">
                    <span class="theme-icon">ðŸŒ™</span>
                </button>
            </div>

            <div class="nav-menu">
                <a href="/dashboard" class="nav-item active">
                    <span class="nav-icon">ðŸ“Š</span>
                    <span>Dashboard</span>
                </a>
                <a href="/all-expenses" class="nav-item">
                    <span class="nav-icon">ðŸ’°</span>
                    <span>All Expenses</span>
                </a>
                <a href="/expenses/add" class="nav-item">
                    <span class="nav-icon">âž•</span>
                    <span>Add Expense</span>
                </a>
            </div>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar"><%= username.charAt(0).toUpperCase() %></div>
                    <span class="user-name"><%= username %></span>
                </div>
                <a href="/settings" class="btn" style="width: 100%; margin-top: var(--space-md); background-color: var(--bg-primary); border: 1px solid var(--border); color: var(--text-primary); text-align: center; padding: var(--space-md);">Settings</a>
                <a href="/logout" class="logout-btn">Logout</a>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="main-content">
            <!-- Header -->
            <header class="page-header">
                <div class="header-content">
                    <h2>Dashboard</h2>
                    <p class="header-subtitle">Your spending overview</p>
                </div>
            </header>

            <!-- Stats Cards -->
            <section class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Total Spent</div>
                    <div class="stat-value">â‚¬<%= totalExpenses %></div>
                    <div class="stat-change positive">All time</div>
                </div>

                <div class="stat-card">
                    <div class="stat-label">This Month</div>
                    <div class="stat-value">â‚¬<%= thisMonthTotal %></div>
                    <div class="stat-change">Current month</div>
                </div>

                <div class="stat-card">
                    <div class="stat-label">Biggest Expense</div>
                    <div class="stat-value">â‚¬<%= biggestExpense %></div>
                    <div class="stat-change">Largest transaction</div>
                </div>

                <div class="stat-card">
                    <div class="stat-label">Top Category</div>
                    <div class="stat-value" style="font-size: 20px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;"><%= topCategory %></div>
                    <div class="stat-change">Most used</div>
                </div>
            </section>

            <!-- Quick Actions Grid -->
            <section class="dashboard-grid">
                <!-- Analytics Card -->
                <a href="/graph" class="card chart-card" style="text-decoration: none; cursor: pointer; transition: var(--transition);">
                    <div class="card-header">
                        <h3>Analytics</h3>
                    </div>
                    <div class="card-body">
                        <div style="text-align: center; padding: 40px 20px;">
                            <div style="font-size: 56px; margin-bottom: 16px; opacity: 0.6;">ðŸ“ˆ</div>
                            <p style="font-size: 16px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px;">Spending Breakdown</p>
                            <p style="font-size: 13px; color: var(--text-secondary);">View charts and insights</p>
                        </div>
                    </div>
                </a>

                <!-- Reports Card -->
                <a href="/report" class="card chart-card" style="text-decoration: none; cursor: pointer; transition: var(--transition);">
                    <div class="card-header">
                        <h3>Reports</h3>
                    </div>
                    <div class="card-body">
                        <div style="text-align: center; padding: 40px 20px;">
                            <div style="font-size: 56px; margin-bottom: 16px; opacity: 0.6;">ðŸ“„</div>
                            <p style="font-size: 16px; font-weight: 600; color: var(--text-primary); margin-bottom: 8px;">Expense Report</p>
                            <p style="font-size: 13px; color: var(--text-secondary);">View detailed table</p>
                        </div>
                    </div>
                </a>
            </section>

            <!-- Recent Expenses -->
            <section style="padding: 0 var(--space-2xl) var(--space-2xl);">
                <div class="card">
                    <div class="card-header">
                        <h3>Recent Expenses</h3>
                        <a href="/all-expenses" class="view-all-link">View All</a>
                    </div>
                    <div class="card-body">
                        <% if (recentExpenses.length > 0) { %>
                            <div class="expense-list">
                                <% recentExpenses.forEach(exp => { %>
                                    <div class="expense-item">
                                        <div class="expense-left">
                                            <div class="expense-category" style="background-color: <%= exp.color %>"></div>
                                            <div class="expense-details">
                                                <div class="expense-name"><%= exp.category %></div>
                                                <div class="expense-date"><%= new Date(exp.date).toLocaleDateString('de-DE') %></div>
                                            </div>
                                        </div>
                                        <div class="expense-amount">â‚¬<%= exp.amount.toFixed(2) %></div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="empty-state">
                                <p>No expenses yet</p>
                                <a href="/expenses/add" class="btn btn-primary" style="margin-top: var(--space-lg); max-width: 200px;">Add First Expense</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <script src="/js/theme.js"></script>
</body>
</html>
