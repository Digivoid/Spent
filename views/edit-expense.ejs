<!DOCTYPE html>
<html>
<head>
    <title>Edit Expense</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title mb-4">Edit Expense</h3>
                        
                        <form method="POST">
                            <div class="mb-3">
                                <label class="form-label">Category</label>
                                <div class="input-group">
                                    <select name="category" class="form-select" required>
                                        <% categories.forEach(cat => { %>
                                            <option value="<%= cat.name %>" <% if(cat.name === expense.category) { %>selected<% } %>><%= cat.name %></option>
                                        <% }); %>
                                    </select>
                                    <a href="/expenses/add-category" class="btn btn-outline-primary">+ New</a>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Subcategory (Optional)</label>
                                <input type="text" name="subcategory" class="form-control" value="<%= expense.subcategory || '' %>" placeholder="e.g., Groceries">
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Note</label>
                                <input type="text" name="note" class="form-control" value="<%= expense.note || '' %>" placeholder="e.g., Weekly shopping">
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Date</label>
                                    <input type="date" name="date" class="form-control" value="<%= expense.date %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Time (Optional)</label>
                                    <input type="time" name="time" class="form-control" value="<%= expense.time || '' %>">
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Amount (â‚¬)</label>
                                    <input type="number" name="amount" class="form-control" step="0.01" value="<%= expense.amount %>" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Color</label>
                                    <input type="color" name="color" class="form-control" style="height: 38px;" value="<%= expense.color || '#007bff' %>">
                                </div>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Update Expense</button>
                            <a href="/dashboard" class="btn btn-secondary w-100 mt-2">Back to Dashboard</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
